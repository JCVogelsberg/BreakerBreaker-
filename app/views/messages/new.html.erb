<h1>New Message</h1>

<% if @message.errors.any? %>
  <p>Something went wrong:</p>
  <ul>
    <% message.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<br><br>
<%= form_for @message do |f| %>
  <%= f.label :to %><br>
  <%= f.text_field :to, :value => "3866310258" %><br>
  <%= f.label :from %><br>
  <%= f.text_field :from %><br>
  <%= f.label :message %><br>
  <%= f.text_area :body, :size => "54"  %><br>
  <%= f.submit %><br>
<% end %>
